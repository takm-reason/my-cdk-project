{
    "name": "my-cdk-project",
    "version": "0.1.0",
    "bin": {
        "my-cdk-project": "bin/my-cdk-project.js"
    },
    "scripts": {
        "build": "tsc",
        "watch": "tsc -w",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:watch": "jest --watch",
        "test:builders": "jest lib/utils/builders",
        "test:small": "jest test/small-scale-stack.test.ts",
        "test:medium": "jest test/medium-scale-stack.test.ts",
        "test:large": "jest test/large-scale-stack.test.ts",
        "cdk": "cdk",
        "deploy:small": "cdk deploy SmallScaleStack",
        "deploy:medium": "cdk deploy MediumScaleStack",
        "deploy:large": "cdk deploy LargeScaleStack",
        "deploy:small:prod": "cdk deploy SmallScaleStack -c environment=production",
        "deploy:medium:prod": "cdk deploy MediumScaleStack -c environment=production",
        "deploy:large:prod": "cdk deploy LargeScaleStack -c environment=production",
        "diff": "cdk diff",
        "synth": "cdk synth",
        "resource-info": "node scripts/generate-resource-info.js",
        "validate": "npm run build && npm run test && npm run synth",
        "clean": "rm -rf cdk.out coverage dist"
    },
    "devDependencies": {
        "@types/jest": "^29.5.0",
        "@types/node": "^20.0.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "aws-cdk": "^2.118.0",
        "eslint": "^8.0.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "jest": "^29.5.0",
        "prettier": "^3.0.0",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.0",
        "typescript": "~5.0.0"
    },
    "dependencies": {
        "aws-cdk-lib": "^2.118.0",
        "constructs": "^10.0.0",
        "source-map-support": "^0.5.21",
        "yaml": "^2.7.0"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "collectCoverageFrom": [
            "lib/**/*.ts",
            "!lib/**/*.d.ts",
            "!lib/utils/interfaces/**/*.ts"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 80,
                "functions": 80,
                "lines": 80,
                "statements": 80
            }
        },
        "coverageReporters": [
            "text",
            "lcov",
            "html"
        ]
    }
}